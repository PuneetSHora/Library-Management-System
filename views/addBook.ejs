<div class="container">
  <div class="row">
      <div class="col-6 offset-3 login-container">
          <h1>Add Book</h1>
          <ul class="nav nav-tabs" id="myTab" role="tablist">
              <li class="nav-item" role="presentation">
                <a class="nav-link active show" id="book-tab" data-toggle="tab" href="#addbook" role="tab" aria-controls="addbook" aria-selected="true">Add Book</a>
              </li>
            </ul>
            <div class="tab-content" id="myTabContent">
              <div class="tab-pane fade show active" id="addbook" role="tabpanel" aria-labelledby=addbook-tab">
                  <form action="/books/addBooks" method="POST" enctype="multipart/form-data">
                      <div class="form-group">
                        <label for="bookid">Book-Id</label>
                        <input type="text" name="bookid" class="form-control" id="bookid" aria-describedby="bookidHelp" placeholder="enter Book-Id">
                      </div>
                      <div class="form-group">
                        <label for="bookname">Book-Name</label>
                        <input type="text" name="bookname" class="form-control" id="bookname" aria-describedby="booknameHelp" placeholder="enter Book-Name">
                      </div>
                      <div class="form-group">
                        <label for="writername">Writer-Name</label>
                        <input type="text" name="writername" class="form-control" id="writername" aria-describedby="writerHelp" placeholder="enter Writer Name">
                      </div>
                      <div class="form-group">
                          <label for="edition">Edition</label>
                          <input type="text" name="edition" class="form-control" id="edition" aria-describedby="bookidHelp" placeholder="enter Book-edition">
                      </div>
                      <div class="form-group">
                        <label for="bookdesc">About Book</label>
                        <textarea class="form-control" name="bookdesc" id="bookdesc" rows="3" placeholder="Book Description"></textarea>
                      </div>
                      <div class="form-group">
                        <label for="image">Book-Image</label>
                        <input type="file" name="image" class="form-control-file" id="image" aria-describedby="imageHelp" placeholder="Add Book-Image">
                      </div>
                      <button type="submit" class="btn btn-primary">Add-Book</button>
                  </form>
              </div>
          </div>
      </div>
  </div>
</div>